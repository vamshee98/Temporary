{
	"name": "pipeline1",
	"properties": {
		"activities": [
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "demojson//example_1.json"
					},
					{
						"name": "Destination",
						"value": "demojson//TargetFile.csv"
					}
				],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['fruit']"
								},
								"sink": {
									"name": "Fruit",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['size']"
								},
								"sink": {
									"name": "Size",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['color']"
								},
								"sink": {
									"name": "Color",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "Json2",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "TargetFile",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "JSONDemo2",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "demojson//example_2.json"
					},
					{
						"name": "Destination",
						"value": "demojson//TargetFile2.csv"
					}
				],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['quiz']['sport']['q1']['question']"
								},
								"sink": {
									"name": "Question",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['quiz']['sport']['q1']['options']"
								},
								"sink": {
									"name": "Options",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['quiz']['maths']['q2']['answer']"
								},
								"sink": {
									"name": "Answer",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "Json1",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Target2",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}